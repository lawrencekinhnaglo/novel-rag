# Novel RAG Chatbot Configuration
# Copy this file to .env and update the values

# Application
APP_NAME="Novel RAG Chatbot"
DEBUG=true

# PostgreSQL with pgvector
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=novelrag
POSTGRES_PASSWORD=novelrag_secret
POSTGRES_DB=novel_rag_db

# Qdrant
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=novel_embeddings

# Neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=novelrag_neo4j

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
CACHE_TTL=3600

# LM Studio (Local LLM)
LM_STUDIO_URL=http://localhost:1234/v1
LM_STUDIO_MODEL=llama-4-maverick

# DeepSeek API (optional)
DEEPSEEK_API_KEY=
DEEPSEEK_API_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat

# Default LLM provider: 'lm_studio' or 'deepseek'
DEFAULT_LLM_PROVIDER=lm_studio

# Embeddings
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# RAG Settings
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.7

